<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_below="@id/toolbar">



    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp"
        android:padding="10dp">








        <android.support.v7.widget.CardView
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.v7.widget.CardView
                    android:id="@+id/profile_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp">


                </android.support.v7.widget.CardView>



                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:text="Good Job, Perez!"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/profile_pic"/>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="10dp"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:text="You haven't missed any task this week."
                    android:textColor="#fff"
                    android:layout_toRightOf="@+id/profile_pic"/>
            </RelativeLayout>






        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/greeting"
            android:clickable="true"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">



                    
                    <ImageView
                        android:id="@+id/p"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_action_done"
                        android:layout_centerVertical="true"/>

                    






                        <TextView
                            android:id="@+id/t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/p"

                            android:layout_marginLeft="20dp"
                            android:alpha="0.8"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="Finish Home Screen"
                            android:textColor="#111"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/time"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@id/t"
                            android:alpha="0.8"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="8:30 AM"
                            android:textColor="#111"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/p"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="20dp"
                            android:alpha="0.6"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="Home App"
                            android:textColor="#111"
                            android:textSize="12sp" />




            </RelativeLayout>






        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:clickable="true"
            android:id="@+id/listt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/list"

            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/pt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_action_done"
                    android:layout_centerVertical="true"/>





                        <TextView
                            android:id="@+id/ttt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/pt"
                            android:layout_marginLeft="20dp"
                            android:alpha="0.8"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="Revise Wireframe"
                            android:textColor="#111"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/timet"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/ttt"

                            android:layout_marginTop="5dp"
                            android:alpha="0.8"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="8:30 AM"
                            android:textColor="#111"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tttt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/pt"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="30dp"
                            android:alpha="0.6"
                            android:shadowDx="50"
                            android:shadowDy="50"
                            android:text="Company Website"
                            android:textColor="#111"
                            android:textSize="12sp" />






            </RelativeLayout>






        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:clickable="true"
            android:id="@+id/listtt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/listt"

            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ptt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_action_done"
                    android:layout_centerVertical="true"/>





                <TextView
                    android:id="@+id/tttttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ptt"
                    android:layout_marginLeft="20dp"
                    android:alpha="0.8"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:text="Design Standup"
                    android:textColor="#111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/timettt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/tttttt"

                    android:layout_marginTop="5dp"
                    android:alpha="0.8"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:text="8:30 AM"
                    android:textColor="#111"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ttttt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ptt"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:alpha="0.6"
                    android:shadowDx="50"
                    android:shadowDy="50"
                    android:text="Hangouts"
                    android:textColor="#111"
                    android:textSize="12sp" />






            </RelativeLayout>






        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/greeting3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listtt"
            app:cardBackgroundColor="@color/colorPrimary">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/mm" />

            <TextView
                android:id="@+id/textViewr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:shadowDx="50"
                android:shadowDy="50"
                android:text="Good Job, Perez!"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textViewrr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:shadowDx="50"
                android:shadowDy="50"
                android:text="You haven't missed any task this week."
                android:textColor="#fff" />





        </android.support.v7.widget.CardView>






    </RelativeLayout>





</RelativeLayout>